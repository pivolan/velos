		<%= stylesheet_link_tag collect_css('*') %>
		<%= javascript_include_tag collect_js('*') %>
		<%= csrf_meta_tag %>
  </head>
  <body>
    <div class='wrapper'>
      <header class='top-wrapper'>
        <div class='logo-wrapper'>logo</div>
        <div class='hello-wrapper'>
					Hello Vasya <%=title %>
          <div class='search-wrapper'>search</div>
        </div>
      </header>
      <div class='middle-line'>news / nav / tips</div>
      <nav class='menu-wrapper'>
        <ul class='main-menu'>
          <li class='main-menu-item'>
            <a href='/test'>Test</a>
          </li>
          <li class='main-menu-item'>
            <a href='/test'>Test</a>
          </li>
