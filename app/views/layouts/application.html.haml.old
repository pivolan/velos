!!!
%html
  %head
    %meta{:charset => "UTF-8"}
    %title
      = title
    = stylesheet_link_tag collect_css('*')
    %script{:src => "/javascripts/jquery-1.6.4.min.js", :type => "text/javascript"}
    = javascript_include_tag collect_js('*')
    = csrf_meta_tag
    %script{:src => "http://maps.google.com/maps/api/js?sensor=false", :type => "text/javascript"}
  %body
    .wrapper
      %header.top-wrapper
        .logo-wrapper logo
        .hello-wrapper
          = title
          .search-wrapper search
      .middle-line news / nav / tips
      %nav.menu-wrapper
        %ul.main-menu
          %li.main-menu-item
            %a{:href => "/test"} Test
          %li.main-menu-item
            %a{:href => "/test"} Test
          %li.main-menu-item
            %a{:href => "/test"} Test
          %li.main-menu-item
            %a{:href => "/test"} Test
      %section.content-wrapper
        = yield
      %section.content-wrapper
        %h1 Создание покатушки
        %form{:action => "/", :class => "form-main form-create-ride"}
          %fieldset
            %dl
              %dt
                %label{:for => "track-filter"} Найдите подходящий трек
              %dd
                %input{:type => "text", :name => "track-filter", :id => "track-filter"}
            %hr
            %p Либо создайте трек с нуля
            .track-map-create
              
          %fieldset
            %p Обязательные поля
            %dl
              %dt
                %label{:for => "start-date"} Дата старта
              %dd
                %input{:type => "datetime-local", :name => "start-date", :id => "start-date"}
          %fieldset
            %p Необязательные поля
            %dl
              %dt
                %label{:for => "end-date"} Дата финиша
              %dd
                %input{:type => "datetime-local", :name => "end-date", :id => "end-date"}
            %dl
              %dt
                %label{:for => "description"} Описание
              %dd
                %textarea{:name => "description", :id => "description", :cols => "100", :rows => "3"}
            %dl
              %dt
                %label{:for => "member-requirements"} Требования к участникам
              %dd
                %textarea{:name => "member-requirements", :id => "member-requirements", :cols => "100", :rows => "3"}
            %dl
              %dt
                %label{:for => "ride-tags"} Тэги покатушки
              %dd
                %input{:type => "text", :name => "ride-tags", :id => "ride-tags"}
            %dl
              %dt
                %label{:for => "ride-tags"} Пригласить
              %dd
                %input{:type => "text", :name => "ride-tags", :id => "ride-tags"}
          %fieldset
            %input{:type => "submit", :value => "Создать!"}
            %input{:type => "reset", :value => "Сбросить!"}
      .for-footer
    %footer
      copyright etc
      %a{:href => "http://validator.w3.org/check?uri=http%3A%2F%2Fdachiko.egop.ru%2F"}
        Проверить html на валидность
